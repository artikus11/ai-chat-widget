{
    "name": "@artikus13/ai-chat-widget",
    "version": "1.0.0",
    "description": "AI chat widget for websites, works with WordPress",
    "main": "dist/chat.js",
    "module": "dist/chat.es.js",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/chat.es.js",
            "require": "./dist/chat.js"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "npm run build:es && npm run build:umd",
        "build:es": "cross-env BUILD_FORMAT=es vite build",
        "build:umd": "cross-env BUILD_FORMAT=umd vite build",
        "preview": "vite preview",
        "publish": "npm run build && npm publish --access public"
    },
    "keywords": [
        "chat",
        "widget",
        "ai",
        "wordpress"
    ],
    "author": "Artem Abramovich <artikus.sol@gamil.com> (https://wpruse.ru)",
    "repository": {
        "type": "git",
        "url": "https://github.com/artikus11/ai-chat-widget.git"
    },
    "homepage": "https://wpruse.ru",
    "bugs": "https://github.com/artikus11/ai-chat-widget/issues",
    "license": "MIT",
    "devDependencies": {
        "cross-env": "^7.0.3",
        "sass": "^1.90.0",
        "sass-embedded": "^1.90.0",
        "vite": "^5.0.0"
    },
    "dependencies": {
        "dompurify": "^3.2.6",
        "marked": "^15.0.12"
    }
}