{
    "compilerOptions": {
        "target": "ES2020",
        "module": "es2020",
        "checkJs": false,
        "baseUrl": ".",
        "paths": {
            "@js/*": [
                "src/js/*"
            ],
            "@test/*": [
                "src/test/*"
            ],
            "@scss/*": [
                "src/scss/*"
            ],
            "config": [
                "config/index.js"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "demo"
    ]
}